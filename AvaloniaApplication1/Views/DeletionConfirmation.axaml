<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="300"
        Height="200"
        x:Class="AvaloniaApplication1.DeletionConfirmation"
        Title="DeletionConfirmation"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True">
  <Panel>
    <ExperimentalAcrylicBorder IsHitTestVisible="False">
      <ExperimentalAcrylicBorder.Material>
        <ExperimentalAcrylicMaterial
            BackgroundSource="Digger"
            TintColor="Black"
            TintOpacity="1"
            MaterialOpacity="0.65" />
      </ExperimentalAcrylicBorder.Material>
    </ExperimentalAcrylicBorder>

    <Panel Margin="40">

      <StackPanel Margin="15" Spacing="10" VerticalAlignment="Center">
        <TextBlock Text="Are you sure you want to delete this item?"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
          <Button x:Name="YesButton" Content="Yes" Width="80"/>
          <Button x:Name="NoButton" Content="No" Width="80"/>
        </StackPanel>
      </StackPanel>
      
    </Panel>
  </Panel>
</Window>
